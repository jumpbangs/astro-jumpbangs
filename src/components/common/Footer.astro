    <a href={SOCIAL_DATA.github} aria-label="github">
      <GithubIcon stroke='white'/>
    </a>
    <a href={SOCIAL_DATA.linkedin} aria-label="linkedin">
      <LinkedinIcon stroke='white'/>
    </a>
    <a href={`mailto:${SOCIAL_DATA.email}`} aria-label="email">
      <MailIcon stroke='white'/>
    </a>
    <a href="/files/Resume.pdf" download="amitchongbang_resume.pdf" aria-label="resume">
      <FileTextIcon stroke='white'/>
    </a>
  </div>
