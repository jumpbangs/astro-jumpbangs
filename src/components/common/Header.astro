---
import { SITE_ROUTES } from 'utils/constants';

const checkIfCurrentPage = (url: string) => {
  return Astro.url.pathname.includes(url);
};

// const { toggleOff = false } = Astro.props;
---

<header>
  <nav class="navbar mt-4">
    <div class="flex-1">
      <a class="btn btn-ghost rounded-full text-xl normal-case lg:text-3xl" href="/">
        <div class="avatar hover:cursor text-white hover:text-amber-400">
          <span>Amit Chongbang</span>
        </div>
      </a>
    </div>

    <div class="flex-none gap-2">
      <ul class="menu menu-horizontal px-1 text-slate-100">
        <li>
          <button
            class={`btn text-lg rounded-full lg:text-2xl btn-ghost ${checkIfCurrentPage('/projects') && 'btn-outline  border-amber-400'}`}
          >
            <a href={SITE_ROUTES.projects.url}>
              {SITE_ROUTES.projects.name}
            </a>
          </button>
        </li>
        <li>
          <button
            class={`btn text-lg rounded-full lg:text-2xl btn-ghost  ${checkIfCurrentPage('/posts') && 'btn-outline  border-amber-400'}`}
          >
            <a href={SITE_ROUTES.blog.url}>
              {SITE_ROUTES.blog.name}
            </a>
          </button>
        </li>
      </ul>
    </div>
  </nav>
</header>
