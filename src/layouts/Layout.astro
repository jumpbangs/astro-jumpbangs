---
import Metadata from 'components/common/Metadata.astro';

import 'styles/base.css';
import 'aos/dist/aos.css';

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <Metadata />
    <!-- <ColorMode /> -->
    <title>{title}</title>
  </head>
  <!-- <body class="bg-zinc-400 antialiased dark:bg-slate-800"> -->
  <body class="overscroll-none bg-gradient-to-b from-slate-900 to-slate-600 antialiased">
    {
      Astro.url.pathname === '/' ? (
        <div class="snap-y snap-mandatory">
          <slot />
        </div>
      ) : (
        <div class="container mx-auto min-h-screen w-full md:w-6/12">
          <slot />
        </div>
      )
    }
  </body>
</html>
